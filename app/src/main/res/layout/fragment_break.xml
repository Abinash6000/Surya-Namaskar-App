<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".fragment.BreakFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvBreakTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="90"
        android:textSize="108sp"
        android:textStyle="bold"
        android:textColor="#03045E"
        android:shadowDx="12"
        android:shadowDy="12"
        android:shadowRadius="24"
        android:shadowColor="#0077B6"
        app:layout_constraintBottom_toTopOf="@+id/skipBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/skipBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SKIP"
        android:padding="24dp"
        android:textSize="32sp"
        android:letterSpacing="0.1"
        android:shadowColor="#0077B6"
        android:shadowDx="12"
        android:shadowDy="12"
        android:shadowRadius="8"
        android:drawableEnd="@drawable/skip_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBreakTime"/>

</androidx.constraintlayout.widget.ConstraintLayout>